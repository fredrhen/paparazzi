<!DOCTYPE module SYSTEM "module.dtd">

<module name="cv_detect_color_object" dir="computer_vision">
  <doc>
    <description>Color Object Detector
    Detects an object by a continuous color. Optionally draws on image.
    
    </description>
    <define name="COLOR_OBJECT_DETECTOR_CAMERA1" value="front_camera|bottom_camera" description="Video device to use"/>
    <define name="COLOR_OBJECT_DETECTOR_FPS1" value="0" description="Desired FPS (0: camera rate)"/>
    <define name="COLOR_OBJECT_DETECTOR_GRAY_SCALE1" value="FALSE|TRUE" description="Filter grayscale image"/>
    <define name="COLOR_OBJECT_DETECTOR_BLUR_IMAGE1" value="FALSE|TRUE" description="Filter blur image"/>
    <define name="COLOR_OBJECT_DETECTOR_BLUR_SIZE_IMAGE1" value="3" description="Filter blur image (kernal size)"/>
    <define name="COLOR_OBJECT_DETECTOR_BLUR_EDGES1" value="FALSE|TRUE" description="Filter blur edges"/>
    <define name="COLOR_OBJECT_DETECTOR_BLUR_SIZE_EDGES1" value="3" description="Filter blur edges"/>
    <define name="COLOR_OBJECT_DETECTOR_BORDERS1" value="FALSE|TRUE" description="Add borders to edges"/>
    <define name="COLOR_OBJECT_DETECTOR_BORDER_MARGIN1" value="3" description="Add borders to edges (pixel margin for complete window"/>
    <define name="COLOR_OBJECT_DETECTOR_Y_UP_filter1" value="FALSE|TRUE" description="Filter UP detect object"/>
    <define name="COLOR_OBJECT_DETECTOR_y_up_del1" value="40" description="Filter UP detect object margin"/>
    <define name="COLOR_OBJECT_DETECTOR_Y_DOWN_filter1" value="FALSE|TRUE" description="Filter DOWN detect object"/>
    <define name="COLOR_OBJECT_DETECTOR_y_down_del1" value="200" description="Filter DOWN detect object margin"/>
    <define name="COLOR_OBJECT_DETECTOR_thresholdmin1" value="100" description="Filter pixel thresshold for connecting edges"/>
    <define name="COLOR_OBJECT_DETECTOR_thresholdmax1" value="200" description="Filter pixel thresshold for main edges"/>
    <define name="COLOR_OBJECT_DETECTOR_kernal_size1" value="3" description="Filter kernal size for edge detection"/>
    <define name="COLOR_OBJECT_DETECTOR_min_obs_size1" value="0.04" description="Filter min size"/>
    <define name="COLOR_OBJECT_DETECTOR_max_obs_size1" value="0.4" description="Filter max size"/>
    <define name="COLOR_OBJECT_DETECTOR_DRAW1" value="FALSE|TRUE" description="Whether or not to draw on image"/>

    <define name="COLOR_OBJECT_DETECTOR_CAMERA2" value="front_camera|bottom_camera" description="Video device to use"/>
    <define name="COLOR_OBJECT_DETECTOR_FPS2" value="0" description="Desired FPS (0: camera rate)"/>
    <define name="COLOR_OBJECT_DETECTOR_GRAY_SCALE2" value="FALSE|TRUE" description="Filter grayscale image"/>
    <define name="COLOR_OBJECT_DETECTOR_BLUR_IMAGE2" value="FALSE|TRUE" description="Filter blur image"/>
    <define name="COLOR_OBJECT_DETECTOR_BLUR_SIZE_IMAGE2" value="3" description="Filter blur image (kernal size)"/>
    <define name="COLOR_OBJECT_DETECTOR_BLUR_EDGES2" value="FALSE|TRUE" description="Filter blur edges"/>
    <define name="COLOR_OBJECT_DETECTOR_BLUR_SIZE_EDGES2" value="3" description="Filter blur edges"/>
    <define name="COLOR_OBJECT_DETECTOR_BORDERS2" value="FALSE|TRUE" description="Add borders to edges"/>
    <define name="COLOR_OBJECT_DETECTOR_BORDER_MARGIN2" value="3" description="Add borders to edges (pixel margin for complete window"/>
    <define name="COLOR_OBJECT_DETECTOR_Y_UP_filter2" value="FALSE|TRUE" description="Filter UP detect object"/>
    <define name="COLOR_OBJECT_DETECTOR_y_up_del2" value="40" description="Filter UP detect object margin"/>
    <define name="COLOR_OBJECT_DETECTOR_Y_DOWN_filter2" value="FALSE|TRUE" description="Filter DOWN detect object"/>
    <define name="COLOR_OBJECT_DETECTOR_y_down_del2" value="200" description="Filter DOWN detect object margin"/>
    <define name="COLOR_OBJECT_DETECTOR_thresholdmin2" value="100" description="Filter pixel thresshold for connecting edges"/>
    <define name="COLOR_OBJECT_DETECTOR_thresholdmax2" value="200" description="Filter pixel thresshold for main edges"/>
    <define name="COLOR_OBJECT_DETECTOR_kernal_size2" value="3" description="Filter kernal size for edge detection"/>
    <define name="COLOR_OBJECT_DETECTOR_min_obs_size2" value="0.04" description="Filter min size"/>
    <define name="COLOR_OBJECT_DETECTOR_max_obs_size2" value="0.4" description="Filter max size"/>
    <define name="COLOR_OBJECT_DETECTOR_DRAW2" value="FALSE|TRUE" description="Whether or not to draw on image"/>
    <define name="MIN_OBS_SIZE" value="0" description="Minimum obstacle size to detect"/>
  </doc>

  <settings>
    <dl_settings>
      <dl_settings name="ColorObjectDetector">
    	 <dl_setting var="GRAY_SCALE1" min="0" step="1" max="1" values="False|True" shortname="GRAY_SCALE1" />
    	 <dl_setting var="BLUR_IMAGE1" min="0" step="1" max="1" values="False|True" shortname="BLUR_IMAGE1" />
    	 <dl_setting var="BLUR_SIZE_IMAGE1" min="0" step="1" max="255" shortname="BLUR_SIZE_IMAGE1"/>
    	 <dl_setting var="BLUR_EDGES1" min="0" step="1" max="1" values="False|True" shortname="BLUR_EDGES1" />
    	 <dl_setting var="BLUR_SIZE_EDGES1" min="0" step="1" max="255" shortname="BLUR_SIZE_EDGES1" />
    	 <dl_setting var="BORDERS1" min="0" step="1" max="1" values="False|True" shortname="BORDERS1" />
    	 <dl_setting var="BORDER_MARGIN1" min="0" step="1" max="255" shortname="BORDER_MARGIN1" />
    	 <dl_setting var="Y_UP_filter1" min="0" step="1" max="1" values="False|True" shortname="Y_UP_filter1" />
    	 <dl_setting var="y_up_del1" min="0" step="1" max="255" shortname="y_up_del1" />
    	 <dl_setting var="Y_DOWN_filter1" min="0" step="1" max="1" values="False|True" shortname="Y_DOWN_filter1" />
    	 <dl_setting var="y_down_del1" min="0" step="1" max="260" shortname="y_down_del1" />
    	 <dl_setting var="thresholdmin1" min="0" step="1" max="255" shortname="thresholdmin1" />
    	 <dl_setting var="thresholdmax1" min="0" step="1" max="255" shortname="thresholdmax1" />
    	 <dl_setting var="kernal_size1" min="3" step="2" max="7" shortname="kernal_size1" />
    	 <dl_setting var="min_obs_size1" min="0" step="0.001" max="1" shortname="min_obs_size1" />
    	 <dl_setting var="max_obs_size1" min="0" step="0.001" max="1" shortname="max_obs_size1" />
         <dl_setting var="cod_draw1"  min="0" step="1" max="1" values="False|True" shortname="draw 1" />
         <dl_setting var="GRAY_SCALE2" min="0" step="1" max="1" values="False|True" shortname="GRAY_SCALE2" />
    	 <dl_setting var="BLUR_IMAGE2" min="0" step="1" max="1" values="False|True" shortname="BLUR_IMAGE2" />
    	 <dl_setting var="BLUR_SIZE_IMAGE2" min="0" step="1" max="255" shortname="BLUR_SIZE_IMAGE2"/>
    	 <dl_setting var="BLUR_EDGES2" min="0" step="1" max="1" values="False|True" shortname="BLUR_EDGES2" />
    	 <dl_setting var="BLUR_SIZE_EDGES2" min="0" step="1" max="255" shortname="BLUR_SIZE_EDGES2" />
    	 <dl_setting var="BORDERS2" min="0" step="1" max="1" values="False|True" shortname="BORDERS2" />
    	 <dl_setting var="BORDER_MARGIN2" min="0" step="1" max="255" shortname="BORDER_MARGIN2" />
    	 <dl_setting var="Y_UP_filter2" min="0" step="1" max="1" values="False|True" shortname="Y_UP_filter2" />
    	 <dl_setting var="y_up_del2" min="0" step="1" max="255" shortname="y_up_del2" />
    	 <dl_setting var="Y_DOWN_filter2" min="0" step="1" max="1" values="False|True" shortname="Y_DOWN_filter2" />
    	 <dl_setting var="y_down_del2" min="0" step="1" max="260" shortname="y_down_del2" />
    	 <dl_setting var="thresholdmin2" min="0" step="1" max="255" shortname="thresholdmin2" />
    	 <dl_setting var="thresholdmax2" min="0" step="1" max="255" shortname="thresholdmax2" />
    	 <dl_setting var="kernal_size2" min="3" step="2" max="7" shortname="kernal_size2" />
    	 <dl_setting var="min_obs_size2" min="0" step="0.001" max="1" shortname="min_obs_size2" />
    	 <dl_setting var="max_obs_size2" min="0" step="0.001" max="1" shortname="max_obs_size2" />
         <dl_setting var="cod_draw2"  min="0" step="1" max="1" values="False|True" shortname="draw 2" />
      </dl_settings>
    </dl_settings>
  </settings>

  <dep>
    <depends>video_thread</depends>
  </dep>

  <header>
    <file name="cv_detect_color_object.h"/>
  </header>

  <init fun="color_object_detector_init()"/>
  <periodic fun="color_object_detector_periodic()" freq="50"/>
  <makefile target="ap">
    <file name="cv_detect_color_object.c"/>
    <file name="opencv_color_edges.cpp"/>
    <file name="opencv_image_functions.cpp"/>
    <file name="lib/vision/image.c"/>
    
    <flag name="CXXFLAGS" value="I$(PAPARAZZI_SRC)/sw/ext/opencv_bebop/install_arm/include"/>
    
    <flag name="LDFLAGS" value="L$(PAPARAZZI_HOME)/sw/ext/opencv_bebop/install_arm/lib"/>
    <flag name="LDFLAGS" value="lopencv_world"/>
    <flag name="LDFLAGS" value="L$(PAPARAZZI_HOME)/sw/ext/opencv_bebop/install_arm/share/OpenCV/3rdparty/lib"/>
    <flag name="LDFLAGS" value="llibprotobuf"/>
    <flag name="LDFLAGS" value="llibjpeg-turbo"/>
    <flag name="LDFLAGS" value="llibpng"/>
    <flag name="LDFLAGS" value="llibtiff"/>
    <flag name="LDFLAGS" value="lzlib"/>
    <flag name="LDFLAGS" value="lquirc"/>
    <flag name="LDFLAGS" value="ltegra_hal"/>
    <flag name="LDFLAGS" value="ldl"/>
    <flag name="LDFLAGS" value="lm"/>
    <flag name="LDFLAGS" value="lpthread"/>
    <flag name="LDFLAGS" value="lrt"/>
  </makefile>
  
  <makefile target="nps">
  	<file name="cv_detect_color_object.c"/>
    <file name="opencv_color_edges.cpp"/>
    <file name="opencv_image_functions.cpp"/>
    <file name="lib/vision/image.c"/>
        
    
    <flag name="CXXFLAGS" value="I$(PAPARAZZI_SRC)/sw/ext/opencv_bebop/install_pc/include"/>
    
    <flag name="LDFLAGS" value="L$(PAPARAZZI_HOME)/sw/ext/opencv_bebop/install_pc/lib"/>
    <flag name="LDFLAGS" value="lopencv_world"/>
    <flag name="LDFLAGS" value="L$(PAPARAZZI_HOME)/sw/ext/opencv_bebop/install_pc/share/OpenCV/3rdparty/lib"/>
    <flag name="LDFLAGS" value="llibprotobuf"/>
    <flag name="LDFLAGS" value="lquirc"/>
    <flag name="LDFLAGS" value="L/usr/lib/x86_64-linux-gnu"/>
    <flag name="LDFLAGS" value="ljpeg"/>
    <flag name="LDFLAGS" value="lpng"/>
    <flag name="LDFLAGS" value="ltiff"/>
    <flag name="LDFLAGS" value="L/usr/lib/x86_64-linux-gnu/hdf5/serial"/>
    <flag name="LDFLAGS" value="lhdf5"/>
    <flag name="LDFLAGS" value="lpthread"/>
    <flag name="LDFLAGS" value="lsz"/>
    <flag name="LDFLAGS" value="lz"/>
    <flag name="LDFLAGS" value="ldl"/>
    <flag name="LDFLAGS" value="lm"/>
    <flag name="LDFLAGS" value="lfreetype"/>
    <flag name="LDFLAGS" value="lharfbuzz"/>
    <flag name="LDFLAGS" value="lrt"/>
  
  </makefile>
</module>

